FROM bitnami/minideb:buster

LABEL maintainer "√çcaro Menezes <emannuelalmeida@gmail.com>"

RUN install_packages lua5.3 liblua5.3-dev curl ca-certificates git luarocks gcc make zlib1g zlib1g-dev openssl libssl-dev
